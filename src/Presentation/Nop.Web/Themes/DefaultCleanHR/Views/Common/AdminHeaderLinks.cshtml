@model AdminHeaderLinksModel
@using Nop.Web.Models.Common;
@if (Model.IsCustomerImpersonated || Model.DisplayAdminLink)
{
    <div class="admin-header-links">
        @if (Model.IsCustomerImpersonated)
        {
            <div class="impersonate">
                <span>@string.Format(T("Account.ImpersonatedAs").Text, Model.ImpersonatedCustomerEmailUsername)</span>
                <a href="@Url.RouteUrl("Logout")" class="finish-impersonation" title="@T("Account.ImpersonatedAs.Finish.Hint")"><i class="fa fa-sign-out fa-inverse fa-lg fa-fw" aria-hidden="true"></i>&nbsp;@T("Account.ImpersonatedAs.Finish")</a>
            </div>
        }
        @if (Model.DisplayAdminLink)
        {
            <a href="@Url.Content("~/admin")" class="administration"><i class="fa fa-cog fa-lg fa-fw" aria-hidden="true"></i>&nbsp;@T("Account.Administration")&nbsp;<i class="fa fa-external-link-square fa-fw" aria-hidden="true"></i>&nbsp;</a>
        }
    </div>
}